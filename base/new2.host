

fnm new2(args&)
    var o new!
    ; todo first arg can be type
    each args a
        ifnot(isList a)
            error "new2 expects lists" 
        untick a        
        if(> a.length 2)
            error :, "new2 expects lists of 2 items (names and values). This list was too long:" a
        var name a.0
        var val a.1             
        o.`name = : eval val        
    o
export new2