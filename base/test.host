fn runTests(tests? force=false)
    if : not tests
        GET "/host/tests" 
        >> each testUrl
            log testUrl
            try
                require testUrl force
                + "Finished Test: " testUrl
            catch(e)
                list 
                    + "ERROR running tests: " testUrl
                    e
                ;break!
            >> log
    else
        error "runTests - implement code to run tests"

export runTests