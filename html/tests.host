

var aName "testName"
var aObj : new name=aName
return aObj.name

fnm test(``obj 'name)
	log obj name


var aName "aObj"
test aObj aName

var model : new text="hi!"

html
	h1 "text goes here"
		bind text model.text
	input class="form-control" placeholder="enter text here"
		bind text model.text
	button "click me" class="btn btn-default"
		bind click : fn(evt) : log model

