

; path to module we'll use for testing load functions
var dummyModule "/hostlang/dummyModule.host"


; test GET
GET dummyModule
=== "var dummyVar 1, export dummyVar, dummyVar"


; test run
>> run 
_ === 1 ; run should return result from last statement
dummyVar === 1 ; should exist because "run" uses current context
rm dummyVar ; remove dummyVar from context for later tests


; test require (GET+run in new context, returns export)
require dummyModule
_.dummyVar === 1 ; require should return export object which should include dummyVar
try              ; dummy var shouldn't exist in this context
    dummyVar
catch(e)
    "no dummy var"
=== "no dummy var"

; test load (require+copy everything in export object to current context)
load dummyModule
dummyVar === 1



