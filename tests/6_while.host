
;; while: simple test
var i 3
while i
	set i : - i 1
	+ "i is " i
=== "i is 0"


;; while: complex test
var i 3
while (set i (- i 1))
	+ "i is " i
=== "i is 1"


;; while: continue and break
var lst (,)
while (!= lst.length 5)
    var i lst.length
    if (== i 2)
        push lst "2!"
        continue!
    if (== i 4) break!
    push lst i
lst
=== (, 0 1 "2!" 3)